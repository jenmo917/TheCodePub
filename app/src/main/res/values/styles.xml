<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/QuotesActionBar</item>
        <item name="actionBarStyle">@style/QuotesActionBar</item>
    </style>

    <style name="QuotesActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/netlight_gold</item>
        <item name="background">@color/netlight_gold</item>
    </style>

    <style name="Metadata">
        <item name="android:textSize">@dimen/font_size_xs</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_metadata</item>
    </style>

    <style name="Quote">
        <item name="android:textSize">@dimen/font_size_ms</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_quote</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginLeft">@dimen/margin_s</item>
        <item name="android:layout_marginBottom">@dimen/margin_s</item>
    </style>

    <style name="QuoteByLine" parent="@style/Metadata">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/margin_xxs</item>
        <item name="android:paddingLeft">@dimen/margin_xs</item>
    </style>

</resources>
