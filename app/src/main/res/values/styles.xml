<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Metadata">
        <item name="android:textSize">@dimen/font_size_xs</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_metadata</item>
    </style>

    <style name="Quote">
        <item name="android:textSize">@dimen/font_size_ms</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_quote</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginLeft">@dimen/margin_s</item>
        <item name="android:layout_marginBottom">@dimen/margin_m</item>
    </style>

    <style name="QuoteByLine" parent="@style/Metadata">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/margin_xxs</item>
        <item name="android:paddingLeft">@dimen/margin_xs</item>
    </style>

</resources>
